load("//defs:package_defs.bzl", "download_source", "cargo_workspace_package")

# Download BuckOS source from GitHub (shared across workspace members)
# Using 0.0.2 tag with NVMe partition path fix
download_source(
    name = "buckos-src",
    src_uri = "https://github.com/hodgesds/buckos/archive/refs/tags/0.0.2.tar.gz",
    sha256 = "a968f3df8597370a6000d8ae25d3f6a018db835ef80e03fe424cfd6f6527ff2e",
    signature_required = False,
)

# BuckOS CLI - Command-line interface for BuckOS management
# Build v2: Using /lib64 library path fix
cargo_workspace_package(
    name = "buckos-cli",
    workspace_source = ":buckos-src",
    member = "buckos",  # Package name is "buckos", binary is "buckos-cli"
    version = "0.1.1",
    bins = ["buckos-cli"],
    description = "BuckOS command-line interface for system management",
    homepage = "https://github.com/hodgesds/buckos",
    license = "Apache-2.0 OR MIT",
    extra_install = """
# Create symlink so users can run 'buckos' instead of 'buckos-cli'
ln -sf buckos-cli "$DESTDIR/usr/bin/buckos"
""",
    deps = [
        "//packages/linux/system/libs/crypto/openssl:openssl",
    ],
    visibility = ["PUBLIC"],
)
